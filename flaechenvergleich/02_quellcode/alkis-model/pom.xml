<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <artifactId>alkis-model</artifactId>
    <name>Alkis-Model</name>
    <packaging>jar</packaging>

    <parent>
        <groupId>de.codefor.bielefeld.randentscheid.flaechenvergleich</groupId>
        <artifactId>parent</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <properties>
        <maven.compiler.target>11</maven.compiler.target>
        <maven.compiler.source>11</maven.compiler.source>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.jvnet.ogc</groupId>
            <artifactId>ogc-schemas</artifactId>
            <version>2.6.1</version>
        </dependency>
        <dependency>
            <groupId>org.jvnet.jaxb2_commons</groupId>
            <artifactId>jaxb2-basics-runtime</artifactId>
            <version>1.11.1</version>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-xjc</artifactId>
            <version>2.3.3</version>
        </dependency>

        <dependency>
            <groupId>org.hisrc.w3c</groupId>
            <artifactId>xlink-v_1_0</artifactId>
            <version>1.4.0</version>
        </dependency>
        <dependency>
            <groupId>org.jvnet.ogc</groupId>
            <artifactId>ows-v_1_0_0</artifactId>
            <version>2.6.1</version>
        </dependency>
        <dependency>
            <groupId>org.jvnet.ogc</groupId>
            <artifactId>filter-v_1_1_0</artifactId>
            <version>2.6.1</version>
            <exclusions>
                <exclusion>
                    <groupId>org.jvnet.ogc</groupId>
                    <artifactId>gml-v_3_1_1</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.jvnet.ogc</groupId>
            <artifactId>gml-v_3_2_1</artifactId>
            <version>2.6.1.patch</version>
        </dependency>
        <dependency>
            <groupId>org.jvnet.ogc</groupId>
            <artifactId>wfs-v_1_0_0</artifactId>
            <version>2.6.1</version>
            <exclusions>
                <exclusion>
                    <groupId>org.jvnet.ogc</groupId>
                    <artifactId>filter-v_1_0_0</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.jvnet.ogc</groupId>
                    <artifactId>gml-v_2_1_2</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <version>0.14.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <schemaDirectory>${project.basedir}/src/main/xsd</schemaDirectory>
                    <schemaIncludes>
                        <include>NAS-Operationen.xsd</include>
                    </schemaIncludes>
                    <bindingDirectory>${project.basedir}/src/main/xjb</bindingDirectory>
                    <bindingIncludes>
                        <include>*.xjb</include>
                    </bindingIncludes>
                    <catalog>${project.basedir}/src/main/catalogs/Catalog.xml</catalog>
                    <generatePackage>de.codefor.bielefeld.randentscheid.flaechenvergleich.model</generatePackage>
                    <encoding>UTF-8</encoding>
                    <strict>false</strict>
                    <extension>true</extension>
                    <episodes>
                        <episode>
                            <groupId>org.jvnet.ogc</groupId>
                            <artifactId>ogc-schemas</artifactId>
                        </episode>
                        <episode>
                            <groupId>org.jvnet.ogc</groupId>
                            <artifactId>wfs-v_1_0_0</artifactId>
                        </episode>
                        <episode>
                            <groupId>org.jvnet.ogc</groupId>
                            <artifactId>ows-v_1_0_0</artifactId>
                        </episode>
                        <episode>
                            <groupId>org.jvnet.ogc</groupId>
                            <artifactId>gml-v_3_2_1</artifactId>
                        </episode>
                        <episode>
                            <groupId>org.hisrc.w3c</groupId>
                            <artifactId>xlink-v_1_0</artifactId>
                        </episode>
                    </episodes>
                    <args>
                        <arg>-extension</arg>
                        <arg>-XautoNameResolution</arg>
                        <arg>-Xnamespace-prefix</arg>
                        <arg>-Xannotate</arg>
                        <arg>-XremoveAnnotation</arg>
                        <arg>-Xwildcard</arg>
                        <arg>-Xsimplify</arg>
                        <arg>-XtoString</arg>
                        <arg>-Xequals</arg>
                        <arg>-XhashCode</arg>
                        <arg>-Xcopyable</arg>
                        <arg>-Xmergeable</arg>
                    </args>
                    <plugins>
                        <plugin>
                            <groupId>org.jvnet.jaxb2_commons</groupId>
                            <artifactId>jaxb2-basics</artifactId>
                            <version>1.11.1</version>
                        </plugin>
                        <plugin>
                            <groupId>org.jvnet.jaxb2_commons</groupId>
                            <artifactId>jaxb2-basics-annotate</artifactId>
                            <version>1.1.0</version>
                        </plugin>
                        <plugin>
                            <groupId>io.fares.bind.xjc.plugins</groupId>
                            <artifactId>jaxb-substitution-plugin</artifactId>
                            <version>0.0.6</version>
                        </plugin>
                    </plugins>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.jvnet.jaxb2_commons</groupId>
                        <artifactId>jaxb2-namespace-prefix</artifactId>
                        <version>1.3</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>


</project>